import pygame as py
import numpy as np
class Enemy():
    def __init__(self, x, y, blockSize, gridarr):
        self.x = x
        self.y = y
        self.blockSize = blockSize
        self.gridarr = gridarr
        self.animation_count = 0
        self.health = 1
        #:damagegiven
        self.enemyimg = None

    def Draw(self, screen, row_count, column_count):
        self.screen = screen
        #These variables are needed for the IsRightOf function.
        self.row_count = row_count
        self.column_count = column_count
        
        '''
        self.animation_count += 1
        self.enemyimg = self.enemyimgs[self.animation_count]

        if self.animation_count >= len(self.enemyimg):
            self.animation_count = 0
        '''
        cir = py.draw.circle(self.screen, (255,0,0), (self.x, self.y), self.blockSize)

        #Draws enemy onto map accourding to a map 1 layout.
        c = self.column_count - 1
        r = 1
        try:
            while c <= self.column_count and c > 0:
                while r  <= self.row_count and r > 0:
                    if(self.gridarr[c-1][1] == 1):
                        print(r)
                        print(c)
                        self.MoveLeft()
                        r += 1
                        c -= 1
                    if(self.gridarr[c-1][1] == 0):
                        self.MoveDown()
                        break
                if(self.gridarr[c-1][1] == 0):
                    break
        except Exception:
            print("WTF")


    def MoveLeft(self):
        speed = 1
        self.x -= speed
    
    def MoveDown(self):
        speed = 1
        self.y += speed

    def GetPos():
        pass
