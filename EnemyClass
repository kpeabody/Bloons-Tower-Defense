import pygame as py
import numpy as np
class Enemy():
    def __init__(self, x, y, blockSize, gridarr):
        self.x = x
        self.y = y
        self.blockSize = blockSize
        self.gridarr = gridarr
        self.animation_count = 0
        self.health = 1
        #:damagegiven
        self.enemyimg = None

    def Draw(self, screen, row_count, column_count):
        self.screen = screen
        #These variables are needed for the IsRightOf function.
        self.row_count = row_count
        self.column_count = column_count
        
        '''
        self.animation_count += 1
        self.enemyimg = self.enemyimgs[self.animation_count]

        if self.animation_count >= len(self.enemyimg):
            self.animation_count = 0
        '''

        if(self.IsRightOf()):
            self.Move()    
        cir = py.draw.circle(self.screen, (255,0,0), (self.x + (self.row_count*self.blockSize), self.y), self.blockSize)

    def IsRightOf(self):
        c = 1
        while c < self.column_count:
            if(self.gridarr[c-1][0] == 1):
                return True
            return False

    def Move(self):
        self.x -= self.blockSize
        #self.x = self.x - self.blockSize

    def GetPos():
        pass
