import pygame as py

class Window1():
    def __init__(self, width, height, startx, starty, screen):
        self.width = width
        self.height = height
        self.startx = startx
        self.starty = starty
        self.screen = screen
        
        screen = py.display.set_mode((self.width, self.height))
        image = py.image.load('grass.gif')
        screen.blit(image, (0,0))

    def GetScreen(self):
        return self.screen

        #Sets the title of the screen
        #("Bloons Tower Defense Game")
        #Sets background color of the screen
        #("white")
        #Sets the size and position of the screen
        #(width, height, startx, starty)
